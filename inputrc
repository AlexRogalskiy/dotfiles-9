"\e[1~": beginning-of-line
"\e[3~": delete-char
"\e[4~": end-of-line
"\el": clear-screen
"\C-l": abort
set bell-style none
set echo-control-characters off

# Improve completions. Refer to 'man bash', "Readline Variables" section.
#
set colored-stats on
# Ignore case when completing.
set completion-ignore-case on
# Treat hypen and underscores as equivalent.
set completion-map-case on
# When completion matches multiple items, replace the common prefix with "...".
set completion-prefix-display-length 2
# Immediately display completion matches.
set show-all-if-ambiguous on
# Control-t to cycle through matches.
"\C-t": menu-complete
# Up and down arrow will now intelligently complete partially completed
# commands by searching through the existing history.
"\e[A": history-search-backward
"\e[B": history-search-forward

# Useful shortcuts; invoke 'bind -p' for full listing:
#
# A-f: forward word
# A-b: backward word
# A-d: delete word
# C-k: delete till end of line
# C-u: delete till start of line
# C-_: undo last edit
