<?xml version="1.0"?>
<!DOCTYPE fontconfig SYSTEM "fonts.dtd">
<fontconfig>
  <!-- Disable emboldening. Synthetic emboldening produces ugly xterm results
       with the Lucida Console, Inconsolata and Droid Mono fonts. -->
  <match target="font">
    <test name="family"><string>Lucida Console</string></test>
    <edit name="embolden" mode="assign"><bool>false</bool></edit>
    <edit name="weight" mode="assign"><const>bold</const></edit>
  </match>
 
  <match target="font">
    <test name="family"><string>Inconsolata</string></test>
    <test target="pattern" name="weight" compare="more">
      <const>medium</const>
    </test>
    <edit name="embolden" mode="assign"><bool>false</bool></edit>
    <edit name="weight" mode="assign"><const>bold</const></edit>
  </match>
 
  <match target="font">
    <test name="family"><string>Droid Sans Mono</string></test>
    <test target="pattern" name="weight" compare="more">
      <const>medium</const>
    </test>
    <edit name="embolden" mode="assign"><bool>false</bool></edit>
    <edit name="weight" mode="assign"><const>bold</const></edit>
  </match>
 
  <match target="font" >
    <edit mode="assign" name="autohint" ><bool>true</bool></edit>
  </match>

  <match target="font" >
    <edit mode="assign" name="rgba" ><const>rgb</const></edit>
  </match>

  <match target="font" >
    <edit mode="assign" name="hinting" ><bool>true</bool></edit>
  </match>

  <match target="font" >
    <edit mode="assign" name="hintstyle" ><const>hintfull</const></edit>
  </match>

  <match target="font" >
    <edit mode="assign" name="antialias" ><bool>true</bool></edit>
  </match>

  <!-- Re-map the fixed font (ugly not anti-aliased) to the nicer monospace
        font. -->
  <match target="pattern">
    <test qual="any" name="family">
      <string>fixed</string>
    </test>
    <edit name="family" mode="assign">
      <string>monospace</string>
    </edit>
  </match>
  <!-- Re-map the ugly Courier font to the nicer sans-serif font.  -->
  <match target="pattern">
   <test qual="any" name="family">
     <string>Courier</string>
   </test>
   <edit name="family" mode="assign">
     <string>sans-serif</string>
   </edit>
  </match>
</fontconfig>
