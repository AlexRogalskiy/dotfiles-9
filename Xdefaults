! Get nice keys such as delete/home/end working in xterms.
! Shift-Control C/V for copy/paste to CLIPBOARD.
! Shift Up/Down arrow for scrolling one line at a time.
*VT100.Translations: #override \
    <Key>BackSpace: string(0x7F)\n\
    <Key>Delete: string("\033[3~")\n\
    <Key>Home: string("\033[1~")\n\
    <Key>End: string("\033[4~")\n\
    Shift Ctrl <Key>C: copy-selection(CLIPBOARD)\n\
    Shift Ctrl <Key>V: insert-selection(CLIPBOARD)\n\
    Shift <Key>Up: scroll-back(1)\n\
    Shift <Key>Down: scroll-forw(1)
*ttyModes: erase ^?

! Font related settings.
Xft.antialias: 1
Xft.autohint: 0
Xft.dpi: 96
Xft.hinting: 1
Xft.hintstyle: hintfull
Xft.lcdfilter: lcddefault
Xft.rgba: rgb
