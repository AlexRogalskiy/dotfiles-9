[user]
    name = Dennis B
    email = bluz71@users.noreply.github.com
[push]
    default = simple
[core]
    autocrlf = input
    pager = diff-so-fancy | less
[color]
    ui = auto
[diff]
    tool = meld
[merge]
    tool = meld
[difftool]
    prompt = false
[difftool "vd"]
    cmd = stty -ixon && vimdiff "$LOCAL" "$REMOTE"
[difftool "icd"]
  cmd = icdiff --line-numbers "$LOCAL" "$REMOTE"
[mergetool]
    keepBackup = false
[alias]
    bb = branch -vv
    bd = branch -d
    ci = commit
    unci = reset --soft HEAD~1
    co = checkout
    cob = checkout -b
    di = diff
    dis = diff --staged
    vdi = difftool -t vd
    vdis = difftool -t vd --staged
    idi = difftool -t icd
    idis = difftool -t icd --staged
    ll = log --graph --format=format:\"%C(yellow)%h%C(red)%d%C(reset) - %C(bold green)(%ar)%C(reset) %s %C(blue)<%an>%C(reset)\"
    llb = !git ll master..HEAD
    ls = log --format=format:\"%C(yellow)%h%C(red)%d %C(reset)%s%C(blue) <%an>%C(reset)\"
    lsb = !git ls master..HEAD
    mdi = difftool
    mdis = difftool --staged
    rso = remote show origin
    sa = "!sh -c 'git stash apply stash@{$1}' -"
    sd = "!sh -c 'git stash drop stash@{$1}' -"
    sg = "!git add . -N && git add -p"
    sh = show
    sl = stash list
    ss = stash save
    st = status --short --branch
