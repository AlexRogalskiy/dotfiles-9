[user]
    name = Dennis B
    email = bluz71@users.noreply.github.com
[push]
    default = simple
[core]
    autocrlf = input
    pager = diff-so-fancy | less
[color]
    ui = auto
[diff]
    tool = meld
[merge]
    tool = meld
[difftool]
    prompt = false
[difftool "vd"]
    cmd = stty -ixon && vimdiff "$LOCAL" "$REMOTE"
[mergetool]
    keepBackup = false
[alias]
    ls = log --format=format:\"%C(yellow)%h%C(red)%d %C(reset)%s%C(blue) <%an>%C(reset)\"
    ll = log --graph --format=format:\"%C(yellow)%h%C(red)%d%C(reset) - %C(bold green)(%ar)%C(reset) %s %C(blue)<%an>%C(reset)\"
    st = status --short --branch
    rso = remote show origin
    bb = branch -vv
    bd = branch -d
    co = checkout
    cob = checkout -b
    ci = commit
    sh = show
    di = diff
    mdi = difftool
    vdi = difftool -t vd
    dis = diff --staged
    mdis = difftool --staged
    vdis = difftool -t vd --staged
