[user]
    name  = Dennis B
    email = bluz71@users.noreply.github.com
[push]
    default = simple
[core]
    autocrlf       = input
    pager          = diff-so-fancy | less
    untrackedCache = true
[color]
    ui = auto
[diff]
    tool       = meld
    algorithm  = histogram
    colorMoved = plain
[pull]
    rebase = true
[merge]
    tool = meld
[difftool]
    prompt = false
[difftool "vd"]
    cmd = nvim -d "$LOCAL" "$REMOTE"
[mergetool]
    keepBackup = false
[advice]
    waitingForEditor = false
[diff-so-fancy]
    markEmptyLines = false
[color "diff-highlight"]
    newNormal    = 2 # green
    newHighlight = 2 22
    oldNormal    = 1 # red
    oldHighlight = 1 52
[color "diff"]
    frag       = 12 # bright blue
    new        = 2  # green
    old        = 1  # red
    whitespace = 1 reverse
    func       = 8  # coral
    newMoved   = 11 # bright yellow
    oldMoved   = 11
[help]
    format = html
#[feature]
#    manyFiles = true
[alias]
    # aliases list
    aliases = !git config --list | grep alias | cut -c7- | sort | bat -l ini --style=plain --paging never
    # reflog
    rl = reflog
    # remote
    rr  = remote -v
    rro = remote show origin
    rru = remote show upstream
    # fetch
    fe  = fetch
    fea = fetch --all --prune
    # branch
    bb  = bvv # Note, bvv is a custom subcommand, see the 'git-bvv' file.
    bba = bvv --all
    bd  = branch -d
    bD  = branch -D
    # remote branch
    bop = push -u origin
    bod = push origin -d
    # switch
    sw  = switch
    swc = switch -c
    # checkout
    cko = checkout
    # add
    sg = !git add . -N && git add -p
    aa = add .
    # commit
    ci    = commit --verbose
    unci  = reset --soft HEAD~1
    amend = commit --amend
    # push / pull
    ps = push
    pl = pull
    # restore
    rs  = restore
    rss = restore --source
    # reset
    undo  = reset --hard
    unadd = reset HEAD
    # diff
    di   = diff
    dip = !sh -c 'git di $1~1..$1' -
    dis  = diff --staged
    mdi  = difftool
    mdip = !sh -c 'git difftool $1~1..$1' -
    mdis = difftool --staged
    vdi  = difftool -t vd
    vdip = !sh -c 'git difftool -t vd $1~1..$1' -
    vdis = difftool -t vd --staged
    # log
    # #e3c78a - yellow
    # #ff5454 - red
    # #42cf89 - bright green
    # #80a0ff - blue
    ll  = "log --graph --date=human --format='%C(#e3c78a)%h%C(#ff5454)%d%C(reset) - %C(#42cf89)(%ad)%C(reset) %s %C(#80a0ff){%an}%C(reset)'"
    llm = !git ll master..HEAD
    llu = !git ll @{upstream}..HEAD
    lld = !git ll HEAD..@{upstream}
    # show
    sh = show
    # merge
    mg   = merge --ff-only
    mgs  = merge --ff-only --squash
    unmg = reset --merge ORIG_HEAD
    mgt  = mergetool
    # rebase
    rb  = rebase
    rbc = rebase --continue
    rbs = rebase --skip
    # stash
    sa  = !sh -c 'git stash apply stash@{$1}' -
    sd  = !sh -c 'git stash drop stash@{$1}' -
    si = !sh -c 'git stash show -p stash@{$1}' -
    sl  = stash list
    sp  = stash pop
    ss  = stash save --include-untracked
