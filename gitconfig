[user]
	name = Dennis B
	email = dennisb@example.com
[push]
	default = simple
[core]
	autocrlf = input
[color]
	ui = auto
[diff]
	tool = meld
	# tool = opendiff (on OS X)
[merge]
	tool = meld
	# tool = opendiff (on OS X)
[difftool]
	prompt = false
[difftool "vd"]
	cmd = stty -ixon && vimdiff "$LOCAL" "$REMOTE"
[mergetool]
	keepBackup = false
[alias]
	ls = log --format=format:\"%C(yellow)%h%C(red)%d %C(reset)%s%C(blue) <%an>%C(reset)\"
	ll = log --graph --format=format:\"%C(yellow)%h%C(red)%d%C(reset) - %C(bold green)(%ar)%C(reset) %s %C(blue)<%an>%C(reset)\"
	st = status --short --branch
	rso = remote show origin
	bb = branch -vv
    bd = branch -d
	co = checkout
	cob = checkout -b
	ci = commit
	sh = show
	di = difftool
	vdi = difftool -t vd
	dis = difftool --staged
	vdis = difftool -t vd --staged
