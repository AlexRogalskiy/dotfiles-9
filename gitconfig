[user]
	name = Dennis
	email = dennis@example.com
[push]
	default = simple
[core]
	autocrlf = input
[color]
	ui = auto
[diff]
	tool = meld
	# tool = opendiff (on Mac)
[merge]
	tool = meld
	# tool = opendiff (on Mac)
[difftool]
	prompt = false
[difftool "vd"]
	cmd = stty -ixon && vimdiff "$LOCAL" "$REMOTE"
[mergetool]
	keepBackup = false
[alias]
	ls = log --format=format:\"%C(yellow)%h%Cred%d %Creset%s%Cblue (%an)\"
	ll = log --graph --format=format:\"%C(yellow)%h%C(reset) - %C(bold green)(%ar)%C(reset) %s %C(blue)(%an)%Creset\"
	st = status --short --branch
	rso = remote show origin
	bb = branch -vv
	co = checkout
	cob = checkout -b
	ci = commit
	di = difftool
	vdi = difftool -t vd
	dis = difftool --staged
	vdis = difftool -t vd --staged
